{
    "name": "phlib/mail",
    "description": "Library for manipulating emails.",
    "type": "library",
    "keywords": ["email", "mail", "mime"],
    "license": "LGPL-3.0",
    "homepage": "https://github.com/phlib/mail",
    "authors": [
        {
            "name": "James Dempster",
            "email": "james.dempster@emailcenteruk.com",
            "role": "developer"
        },
        {
            "name": "Chris Minett",
            "email": "chris.minett@emailcenteruk.com",
            "role": "developer"
        },
        {
            "name": "Luke Richards",
            "email": "luke.richards@emailcenteruk.com",
            "role": "developer"
        }
    ],
    "require": {
        "php": "^7.3",
        "ext-fileinfo": "*",
        "ext-mailparse" : "*",
        "ext-mbstring": "*",

        "egulias/email-validator": "^2",
        "symfony/mime": "^5"
    },
    "require-dev": {
        "ext-iconv" : "*",
        "phpunit/phpunit": "^8",
        "php-mock/php-mock-phpunit": "^2"
    },
    "autoload": {
        "psr-4": {
            "Phlib\\Mail\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Phlib\\Mail\\Tests\\": "tests/"
        }
    }
}
